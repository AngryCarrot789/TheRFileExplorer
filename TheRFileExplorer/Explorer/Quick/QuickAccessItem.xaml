<UserControl x:Class="TheRFileExplorer.Explorer.Quick.QuickAccessItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheRFileExplorer.Explorer.Quick"
             mc:Ignorable="d" 
             Height="20" d:DesignWidth="400">
    <Grid Background="Transparent" MouseDown="Grid_MouseDown">
        <Image Source="{Binding Icon, Mode=OneTime}" HorizontalAlignment="Left" Width="20"/>
        <TextBlock Text="{Binding FileName, Mode=OneTime}" Margin="23 0 0 0" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
